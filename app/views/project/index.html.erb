<table cellpadding=10 cellspacing=10 align=center>
  <tr>
    <th bgcolor='lime'>Title</th>
    <th bgcolor='lime'>Description</th>
    <th bgcolor='lime' colspan=3>CRUD</th>
  </tr>
 
  <% @projects.each do |p| %>
    <tr>
      <td><%= p.title %></td>
      <td><%= p.desc %></td>
      <td><%= link_to 'Show', project_path(p) %></td>
      <td><%= link_to 'Edit', edit_project_path(p) %></td>
       <td><%= link_to 'Destroy', project_path(p),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @projects %>
